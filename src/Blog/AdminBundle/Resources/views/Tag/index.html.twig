{% extends '@Admin/layout.html.twig' %}

{% block title %}{{ 'tags'|trans }}{% endblock %}

{% block section %}
    <h1>{{ 'tags'|trans }}</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for tag in tags %}
            <tr>
                <td><a class="tag" href="{{ path('blog_admin_tag_edit', { id: tag.id }) }}">{{ tag.name }}</a></td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('blog_admin_tag_show', { 'id': tag.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('blog_admin_tag_edit', { 'id': tag.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blog_admin_tag_new') }}">Create a new tag</a>
        </li>
    </ul>
{% endblock %}
