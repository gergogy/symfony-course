{% extends '@Admin/layout.html.twig' %}

{% block title %}{{ 'tag.edit.adv'|trans({ '%name%': tag.name }) }}{% endblock %}

{% block section %}
    <h1>{{ 'tag.edit.adv'|trans({ '%name%': tag.name }) }}</h1>

    {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <input type="submit" value="Edit" />
    {{ form_end(edit_form) }}

    <ul>
        <li>
            <a href="{{ path('blog_admin_tag_index') }}">Back to the list</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
