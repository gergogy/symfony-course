{% extends '@Admin/layout.html.twig' %}

{% block title %}{{ post.title }}{% endblock %}

{% block section %}
    <h1>{{ post.title }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Created at</th>
                <td>{{ post.createdAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Updated at</th>
                <td>{{ post.updatedAt|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ post.title }}</td>
            </tr>
            <tr>
                <th>Body</th>
                <td>{{ post.body|nl2br }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td><a href="{{ path('blog_admin_author_edit', { id: post.author.id }) }}">{{ post.author.name }}</a></td>
            </tr>
            <tr>
                <th>Tags</th>
                <td>
                    <ul>
                        {% for tag in post.tags %}
                            <li><a href="#">{{ tag.name }}</a></li>
                        {% else %}
                            <li>{{ 'tag.no_tags'|trans }}</li>
                        {% endfor %}
                    </ul>
                </td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('blog_admin_post_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('blog_admin_post_edit', { 'id': post.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
